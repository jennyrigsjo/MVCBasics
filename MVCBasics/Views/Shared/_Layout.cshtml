@{
    string[] links = new string[]
    {
        "about",
        "contact",
        "projects",
        "fevercheck",
    };

    string title = $"{ViewBag.Title} | Jenny Rigsjö";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="description" content="A simple website built using ASP.NET">
    <meta name="keywords" content="ASP.NET, MVC, Razor">
    <meta name="author" content="Jenny Rigsjö">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>@title</title>
    </head>
    <body>
        <header>
                <a href="/about" title="Jenny Rigsjö">
                    <div id="logo"></div>
                </a>
               <nav >
                    <ul class="menu">
                        @foreach (string link in links)
                        {
                            string href = $"/{link}";
                            string name = App_Code_Shared.CapitalizeFirstLetter(link);
                            <li><a href=@href>@name</a></li>
                        }
                   </ul>
               </nav>
        </header>
        <main>
            @RenderBody()
        </main>
        <footer>&copy; @DateTime.Now.Year | Jenny Rigsjö</footer>
    </body>
    </html>
